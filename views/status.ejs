<h1>Status Check</h1>

<form action = "/getStatus" method="post" name = "checkform">
    <input type = "text" name = "check" placeholder = "Enter String" required>
    <br><br>
<button type = "Submit" onclick="checkProposalStatus()">Submit</button>
</form>

<div id="status"></div>

<script>
    async function checkProposalStatus() {
        const checkstring = document.getElementById('checkstring').value;

        // Make a fetch request to your server to get the status
        const response = await fetch(`/getStatus?checkstring=${checkstring}`);
        const data = await response.json();

        // Display the status on the page
        document.getElementById('status').innerHTML = `<p>Status: ${data.status}</p>`;
    }
</script>


